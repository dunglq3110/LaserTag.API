                            </StackPanel>

                            <!-- Display Player Armor in Row 2 -->
                            <StackPanel Orientation="Horizontal" Grid.Row="2"
                      HorizontalAlignment="Stretch">
                                <TextBlock Text="Armor: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentArmor}" Margin="5,0"/>
                            </StackPanel>

                            <!-- Display Player Bullets and SSketch Bullets in Row 3 -->
