<Page x:Class="LaserTag.Host.Views.MatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaserTag.Host.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="Team1ListView" Grid.Column="0" ItemsSource="{Binding Team1Players}" AllowDrop="True" Drop="TeamListView_Drop">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="5"
                            MouseRightButtonDown="PlayerCard_MouseDoubleClick"
                            PreviewMouseMove="PlayerCard_PreviewMouseMove">
                        <TextBlock Text="{Binding Name}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView x:Name="Team2ListView" Grid.Column="1" ItemsSource="{Binding Team2Players}" AllowDrop="True" Drop="TeamListView_Drop">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="5"
                            MouseRightButtonDown="PlayerCard_MouseDoubleClick"
                            PreviewMouseMove="PlayerCard_PreviewMouseMove">
                        <TextBlock Text="{Binding Name}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView x:Name="Team3ListView" Grid.Column="2" ItemsSource="{Binding Team3Players}" AllowDrop="True" Drop="TeamListView_Drop">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="5"
                            MouseRightButtonDown="PlayerCard_MouseDoubleClick"
                            PreviewMouseMove="PlayerCard_PreviewMouseMove">
                        <TextBlock Text="{Binding Name}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView x:Name="Team4ListView" Grid.Column="3" ItemsSource="{Binding Team4Players}" AllowDrop="True" Drop="TeamListView_Drop">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="5"
                            MouseRightButtonDown="PlayerCard_MouseDoubleClick"
                            PreviewMouseMove="PlayerCard_PreviewMouseMove">
                        <TextBlock Text="{Binding Name}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
