<Window x:Class="LaserTag.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaserTag.Host" 
        xmlns:logic="clr-namespace:LaserTag.Host.Logic" 
        d:DataContext="{d:DesignInstance Type=logic:GameManager}"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="SingleBorderWindow"
        Height="600" 
        Width="800" 
        KeyDown="MainWindow_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tab-like buttons at the top -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="MatchButton" Grid.Column="0" Content="Match" Click="MatchButton_Click" Style="{StaticResource TabButtonStyle}"/>
            <Button x:Name="GameProgressButton" Grid.Column="1" Content="Game Progress" Click="GameProgressButton_Click" Style="{StaticResource TabButtonStyle}"/>
        </Grid>

        <!-- Main content area -->
        <Frame x:Name="MainFrame" Grid.Row="1" Grid.Column="0" NavigationUIVisibility="Hidden"/>

        <!-- Right side panel -->
        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding IpAddress}" FontSize="18" Margin="10"/>

            <Button Grid.Row="1" Content="Wifi Connect" Click="WifiConnect_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Row="2" Content="New Match" Click="NewMatch_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Row="3" Content="Start Match" Click="StartMatch_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>
            
            <Button Grid.Row="4" Content="End Match" Click="EndMatch_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>
            
            <Button Grid.Row="5" Content="New Round" Click="NewRound_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>
            
            <Button Grid.Row="6" Content="Start Round" Click="StartRound_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Row="7" Content="Battle phase" Click="BattlePhase_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Row="8" Content="End Round" Click="EndRound_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Row="9" Content="Pause Round" Click="PauseRound_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Row="10" Content="Resume Round" Click="ResumeRound_Click" Margin="10" Style="{StaticResource ActionButtonStyle}"/>

            

        </Grid>
    </Grid>

    
</Window>